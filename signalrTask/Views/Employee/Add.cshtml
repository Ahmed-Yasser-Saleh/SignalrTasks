@model Employee

<h1>Add Employee</h1>
<form asp-action="Save" asp-controller="Employee" method="post">
      <label>Name</label>
      <input type="text" value="@Model?.name" name="name"/>
      <label>Address</label>
      <input type="text" value="@Model?.address" name="address"/>
      <label>Age</label>
          <input type="text" value="@Model?.age" name="age" />
      
      <button type="submit" class="btn btn-primary">Save</button>
</form>